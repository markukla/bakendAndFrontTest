{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./src",
    "alwaysStrict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "noEmit":false,
    "module":"commonjs"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["**/node_modules", "**/build", "**/dist", "**/*.md", "**/rollup.config.js"]
}
